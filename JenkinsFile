pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                   ls -la
                   node --version
                   npm --version
                   npm ci       /* instead of npm install, use CI specific command */
                   npm run Build
                   ls -la
                '''
            }
        }
    }
}
